<Window x:Class="simpleLibrary.BorrowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simpleLibrary"
        mc:Ignorable="d"
        Title="Borrow Book or Journal" Height="281.2" Width="509.6" Closed="Window_Closed">
    <Grid Margin="0,0,0.2,-5">
        <Label Content="Member" HorizontalAlignment="Left" Margin="23,22,0,0" VerticalAlignment="Top" Height="38" Width="142"/>
        <Label Content="Stock" HorizontalAlignment="Left" Margin="268,22,0,0" VerticalAlignment="Top" Height="38" Width="142"/>
        <ComboBox x:Name="cmbMembers" HorizontalAlignment="Left" Margin="23,65,0,0" VerticalAlignment="Top" Width="120" Height="33"/>
        <ComboBox x:Name="cmbStock" HorizontalAlignment="Left" Margin="268,65,0,0" VerticalAlignment="Top" Width="174" Height="33"/>
        <Button x:Name="btnborrow1" Content="Borrow" HorizontalAlignment="Left" Margin="268,184,0,0" VerticalAlignment="Top" Width="128" Click="Btnborrow1_Click" Height="40"/>
        <Button x:Name="btnCancel1" Content="Cancel" HorizontalAlignment="Left" Margin="23,184,0,0" VerticalAlignment="Top" Width="128" Click="BtnCancel1_Click" Height="40"/>

    </Grid>
</Window>
